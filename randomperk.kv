<SurvivorScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 1

            SmallButton:
                size_hint_x: 1
                background_color: 1,1,1,0
                on_press:
                    root.manager.transition.direction = 'right'
                    root.back_main()
                Image:
                    source: './images/other_icon/icon_back.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Label:
                size_hint_x: 6

            SmallButton:
                size_hint_x: 2
                text: 'all'
                background_color: 0,0,1,1
                font_name: 'chalkduster'
                font_size: 24
                on_press: root.all_rand()

            SmallButton:
                size_hint_x: 1
                background_color: 0,1,0,1
                on_press:
                    root.manager.transition.direction = 'down'
                    root.to_config()
                Image:
                    source: './images/other_icon/icon_config.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

        BoxLayout:
            size_hint_y: 5

            BoxLayout:
                orientation: 'vertical'

                SmallButton:
                    size_hint_y: 0.6
                    text: 'Perk'
                    font_name: 'chalkduster'
                    font_size: 24
                    background_color: 0,0,1,1
                    on_press: root.perk_allrand()

                BoxLayout:
                    size_hint_y: 2

                    SmallButton:
                        on_press: root.perk_rand(0)
                        Image:
                            source: './images/perk_svr/' + str(root.perks_src[0]) + '.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y

                    SmallButton:
                        on_press: root.perk_rand(1)
                        Image:
                            source: './images/perk_svr/' + str(root.perks_src[1]) + '.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y

                BoxLayout:
                    size_hint_y: 2

                    SmallButton:
                        on_press: root.perk_rand(2)
                        Image:
                            source: './images/perk_svr/' + str(root.perks_src[2]) + '.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y

                    SmallButton:
                        on_press: root.perk_rand(3)
                        Image:
                            source: './images/perk_svr/' + str(root.perks_src[3]) + '.png'
                            center_x: self.parent.center_x
                            center_y: self.parent.center_y

            SmallButton:
                on_press: root.chara_rand()
                Image:
                    source: './images/portrait_svr/' + str(root.port_src) + '.png'
                    size: self.parent.size
                    size_hint: None, None
                    x: self.parent.x
                    y: self.parent.center_y - self.height/2
                    keep_ratio: True

        BoxLayout:
            size_hint_y: 4

            BoxLayout:
                orientation: 'vertical'

                SmallButton:
                    size_hint_y: 1
                    text: 'Item'
                    font_name: 'chalkduster'
                    font_size: 24
                    background_color: 0,0,1,1
                    on_press: root.item_allrand()

                SmallButton:
                    size_hint_y: 3
                    on_press: root.item_rand()
                    Image:
                        source: './images/item_svr/' + str(root.item_src) + '.png'
                        x: self.parent.center_x - self.width/2
                        y: self.parent.center_y - self.height/2
                        allow_stretch: True

                BoxLayout:
                    size_hint_y: 2

                    SmallButton:
                        on_press: root.addon_randnum(0)
                        Image:
                            source: './images/addon_svr/' + str(root.addons_src[0]) + '.png'
                            x: self.parent.center_x - self.width/2
                            y: self.parent.center_y - self.height/2

                    SmallButton:
                        on_press: root.addon_randnum(1)
                        Image:
                            source: './images/addon_svr/' + str(root.addons_src[1]) + '.png'
                            x: self.parent.center_x - self.width/2
                            y: self.parent.center_y - self.height/2

            BoxLayout:
                orientation: 'vertical'

                SmallButton:
                    size_hint_y: 1
                    text: 'Offering'
                    font_name: 'chalkduster'
                    font_size: 24
                    background_color: 0,0,1,1
                    on_press: root.offering_rand()

                SmallButton:
                    size_hint_y: 5
                    on_press: root.offering_rand()
                    Image:
                        source: './images/offering_svr/' + str(root.offering_src) + '.png'
                        x: self.parent.center_x - self.width/2
                        y: self.parent.center_y - self.height/2



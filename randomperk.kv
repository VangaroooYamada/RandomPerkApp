#:kivy 1.10.1

<SmallButton@Button>:
    padding: (20, 20)
    padding_color: 1, 1, 0, 1


<MainScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 0.5

            Label:
                size_hint_x: 9

            Button:
                size_hint_x: 1
                background_color: 0,1,0,1
                on_press:
                    root.manager.transition.direction = 'right'
                    root.to_help()
                Image:
                    source: './images/other_icon/icon_help.png'
                    size: self.parent.size
                    x: self.parent.center_x - self.width/2
                    y: self.parent.center_y - self.height/2

        Label:
            size_hint_y: 1
            text: 'Play As'
            font_size: 32
            color: 1,0,0,1
            font_name: 'chalkduster'

        Label:
            size_hint_y: 1

        BoxLayout:
            size_hint_y: 2

            Label:
                size_hint_x: 1

            Button:
                size_hint_x: 2
                background_color: 0,0,1,1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.survivor_selected()
                Image:
                    source: './images/other_icon/icon_survivor.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Label:
                size_hint_x: 1

            Button:
                size_hint_x: 2
                background_color: 1,0,0,1
                on_press:
                    root.manager.transition.direction = 'left'
                    root.killer_selected()
                Image:
                    source: './images/other_icon/icon_killer.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Label:
                size_hint_x: 1

        Label:
            size_hint_y: 1


<HelpScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 1

            Button:
                size_hint_x: 1
                background_color: 1,1,1,0
                on_press:
                    root.manager.transition.direction = 'left'
                    root.back_main()
                Image:
                    source: './images/other_icon/icon_back.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Label:
                size_hint_x: 9

        Label:
            size_hint_y: 9
            text: root.help_sentence
            # font_name: 'chalkduster'
            font_size: 18
            halign: 'left'
            markup: True



<SvrConfigScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 1

            Button:
                size_hint_x: 1
                background_color: 1,1,1,0
                on_press:
                    root.manager.transition.direction = 'up'
                    root.back_prev()
                Image:
                    source: './images/other_icon/icon_back.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Label:
                size_hint_x: 8
                text: 'Survivor Config'
                font_size: 28
                color: 0,0,1,1
                font_name: 'chalkduster'

            Label:
                size_hint_x: 1

        BoxLayout:
            size_hint_y: 1.8

            Label:
                text: 'Non-Perk Allowing'
                font_name: 'chalkduster'

            Switch:
                id: sw_1
                active: False

        BoxLayout:
            size_hint_y: 1.8

            Label:
                text: 'Unique Perk Only'
                font_name: 'chalkduster'

            Switch:
                id: sw_2
                active: False

        BoxLayout:
            size_hint_y: 1.8

            Label:
                text: 'Non-Item Allowing'
